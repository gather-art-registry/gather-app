<h1>Listing registries</h1>

<table>
  <thead>
    <tr>
      <th>Type of event</th>
      <th>Event date</th>
      <th>Registry close date</th>
      <th>Story</th>
      <th>Event website</th>
      <th>Delivery instructions</th>
      <th>Notes</th>
      <th>Publish</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registries.each do |registry| %>
      <tr>
        <td><%= registry.type_of_event %></td>
        <td><%= registry.event_date %></td>
        <td><%= registry.registry_close_date %></td>
        <td><%= registry.story %></td>
        <td><%= registry.event_website %></td>
        <td><%= registry.delivery_instructions %></td>
        <td><%= registry.notes %></td>
        <td><%= registry.publish %></td>
        <td><%= registry.user %></td>
        <td><%= link_to 'Show', registry %></td>
        <td><%= link_to 'Edit', edit_registry_path(registry) %></td>
        <td><%= link_to 'Destroy', registry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

