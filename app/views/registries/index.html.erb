<!-- Content Block
============================================-->
<section class="content-block default-bg">

  <!-- Container -->
  <div class="container cont-pad-t-sm">

    <!-- Row -->
    <div class="row">

      <!-- Main Col -->
      <div class="main-col col-sm-8 col-md-8 mgb-30-xs">
        <h4>Users</h4>
        <div class="panel panel-default">
          <div class="panel-heading">
              <h4 class="panel-title">All Registries</h4>
          </div>
          <div class="panel-body">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Type of event</th>
                  <th>Event date</th>
                  <th>Registry close date</th>
                  <th>Publish</th>
                  <th>User</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @registries.each do |registry| %>
                  <tr>
                    <td><%= registry.type_of_event %></td>
                    <td><%= registry.event_date %></td>
                    <td><%= registry.registry_close_date %></td>
                    <td><%= registry.publish %></td>
                    <td><%= registry.user.username %></td>
                    <td><%= link_to 'Edit', edit_user_registry_path(id: registry.id, user_id: registry.user.id), class: "btn btn-info btn-sm" %> <%= link_to 'Destroy', registry, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            To create a new registry, first <%= link_to 'Select a User', users_path %>
          </div>
        </div>
              
      </div>
      <!-- /Main Col -->
      
      <%= render "pages/admin_side_bar" %>

    </div>
    <!-- /Row -->
  
  </div>
  <!-- /Container -->
  
</section>
<!-- /Content Block
============================================-->
