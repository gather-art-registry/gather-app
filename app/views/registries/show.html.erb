<!-- Content Block
============================================ -->
<section class="content-block has-sidebar default-bg">

  <!-- Container -->
  <div class="container cont-main no-pad-t">
  
    <!-- Row -->
    <div class="row">

      <!-- Main Col -->
      <div class="main-col col-sm-9 col-md-9">
      
        <!-- Categ Slider -->
        <div class="categ-slider bx-pager-bottom-right mgb-20">
          <ul class="bxslider" data-call="bxslider" data-options="{controls:false}">
            <li><img src="images/slides/slide1-text.jpg" alt=""/></li>
            <li><img src="images/slides/slide2-text.jpg" alt=""/></li>
            <li><img src="images/slides/slide3-text.jpg" alt=""/></li>
          </ul>
        </div>
        <!-- /Categ Slider -->

        <p id="notice"><%= notice %></p>

        <h4><%= @registry.type_of_event %><h4>
        <div class="row">
          <div class="col-sm-6 col-md-6">
            <p>
              <strong>Event date:</strong>
              <%= @registry.event_date %>
            </p>
          </div>
          <div class="col-sm-6 col-md-6">
            <p>
              <strong>Registry close date:</strong>
              <%= @registry.registry_close_date %>
            </p>
          </div>
        </div>
        <p>
          <strong>Story:</strong>
          <%= @registry.story %>
        </p>

        <p>
          <strong>Event website:</strong>
          <%= @registry.event_website %>
        </p>
        <div class="well">
          <p>
            <strong>Delivery instructions:</strong>
            <%= @registry.delivery_instructions %>
          </p>

          <p>
            <strong>Notes:</strong>
            <%= @registry.notes %>
          </p>

          <p>
            <strong>Publish:</strong>
            <%= @registry.publish %>
          </p>
          <%= link_to 'Edit', edit_registry_path(@registry) %> |
          <%= link_to 'Back', registries_path %>
        </div>
        
      
        <!-- Products Filter -->
        <div class="products-filter clearfix">
          <div class="display">
            <span class="show-list" onclick="changeView('list')"><span class="text hidden-xs">List</span><i class="icon fa fa-th-list"></i></span>
            <span class="show-grid" onclick="changeView('grid')"><span class="text hidden-xs">Grid</span><i class="icon fa fa-th"></i></span>
          </div>

          <div class="filter"><b class="hidden-xs">No</b>
            <select>
            <option value="9" selected="selected">9</option>
            <option value="12">12</option>
            <option value="15">15</option>
            <option value="18">18</option>
            </select>
          </div>
          
          <div class="filter"><b class="hidden-xs">Sort By</b>
            <select>
            <option value="9" selected="selected">Date</option>
            <option value="12">Price</option>
            <option value="15">Popularity</option>
            </select>
          </div>
        
        </div>
        <!-- /Products Filter -->
      
        <!-- Row -->
        <div class="product-grid row grid-20 mgb-20">
        
        <% @items.each do |item| %>

        <div class="col-sm-4 col-md-3">

          <%= render "pages/single_item", item: item %>

        </div>

        <% end %>
          
          <!-- Col -->
          <div class="col-sm-6 col-md-4">
          
            <!-- product -->
            <div class="product clearfix">
            
              <!-- Image -->
              <div class="image"> 
                <a href="product.html" class="main"><img src="images/products/product2.jpg" alt=""></a>
                <ul class="additional">
                  <li><a href="images/products/product2.jpg" data-gal="prettyPhoto[gallery 2]" title="Product Name"><img src="images/products/product2.jpg" alt=""></a></li>
                  <li><a href="images/products/product2.jpg" data-gal="prettyPhoto[gallery 2]" title="Product Name"><img src="images/products/product2.jpg" alt=""></a></li>
                  <li><a href="images/products/product2.jpg" data-gal="prettyPhoto[gallery 2]" title="Product Name"><img src="images/products/product2.jpg" alt=""></a></li>
                  <li><a href="images/products/product2.jpg" data-gal="prettyPhoto[gallery 2]" title="Product Name"><img src="images/products/product2.jpg" alt=""></a></li>
                </ul>
              </div>
              <!-- Image -->
              
              <!-- Details -->
              <div class="details">
              
                <a class="title" href="product.html">Item Name</a>
                
                <p class="desc">Temporibus autem quibusdam et aut officiis debitis aut rerum necessitatibus saepe eveniet ut et voluptates.</p>
                
                <!-- Price Box -->
                <div class="price-box">
                  <span class="price">Number of Items: #</span>
                </div>
                <!-- /Price Box -->
                
                <!-- buttons -->
                <div class="btn-group">
                  <a class="btn btn-outline btn-base-hover" href="cart.html">add to cart</a>  
                  <a class="btn btn-outline btn-default-hover" href="product.html"><i class="icon fa fa-heart"></i></a>
                </div> 
                <!-- /buttons -->
                
              </div>
              <!-- /Details -->
              
            </div>
            <!-- /product -->
          
          </div>
          <!-- /Col -->

        </div>
        <!-- /Row -->
        
        <!-- Pagination -->
        <ul class="pagination">
          <li><a href="#">&laquo;</a></li>
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li><a href="#">&raquo;</a></li>
        </ul>
        <!-- /Pagination -->
        
      </div>
      <!-- /Main Col -->
      
      <%= render "side_bar" %>

    </div>
    <!-- /Row -->
  
  </div>
  <!-- /Container -->
  
</section>
<!-- /Content Block
============================================-->

