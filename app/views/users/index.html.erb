<!-- Content Block
============================================-->
<section class="content-block default-bg">

  <!-- Container -->
  <div class="container cont-pad-t-sm">

    <!-- Row -->
    <div class="row">

      <!-- Main Col -->
      <div class="main-col col-sm-9 col-md-9 mgb-30-xs">
        <h4>Users</h4>
        <div class="panel panel-default">
          <div class="panel-heading">
              <h4 class="panel-title">Table Striped</h4>
          </div>
          <div class="panel-body">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Username</th>
                  <th>Name</th>                
                  <th>Email</th>
                  <th>City</th>
                  <th>State</th>
                  <th>Registry</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.username %></td>
                    <td><%= user.first_name %> <%= user.last_name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.city %></td>
                    <td><%= user.state %></td>
                    <td><%= link_to user.registries.first.type_of_event, user_registry_path(id: user.registries.first.id, user_id: user.id) if user.registries.first %></td>
                    <td><%= link_to 'Show', user, class: "btn btn-default btn-xs" %> <%= link_to 'Edit', edit_user_path(user), class: "btn btn-info btn-xs" %> <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'New User', new_user_path %>
          </div>
        </div>
              
      </div>
      <!-- /Main Col -->

      <%= render "pages/admin_side_bar" %>
      
    </div>
    <!-- /Row -->
  
  </div>
  <!-- /Container -->
  
</section>
<!-- /Content Block
============================================-->
