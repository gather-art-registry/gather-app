<!-- Content Block
============================================ -->
<div class="content-block">

  <!-- Container -->
  <div class="container no-pad-t">

    <!-- Product Tabs -->
    <div class="product-tabs">

      <!-- Nav tabs -->
      <ul class="nav nav-tabs nav-tabs-line-bottom line-bcolor nav-tabs-center case-u" role="tablist">
        <li class="active"><a href="#tab-latest" data-toggle="tab">latest</a></li>
        <li><a href="#tab-featured" data-toggle="tab">featured</a></li>
        <li><a href="#tab-trending" data-toggle="tab">trending</a></li>
      </ul>
      <!-- /Nav Tabs -->

      <!-- Tab panes -->
      <div class="tab-content tab-no-borders">
      
        <!-- Tab Latest -->
        <div class="tab-pane active" id="tab-latest">
        
          <!-- Row -->
          <div class="row">
          
            <% @latest_items.each do |item| %>

            <div class="col-sm-6 col-md-4">

            <%= render "single_item", item: item %>   

            </div> 
                
            <% end %>
          
          </div>
          <!-- /Row -->
        
        </div>
        <!-- /Tab Latest -->
        
        <!-- Tab Featured -->
        <div class="tab-pane" id="tab-featured">
        
          <!-- Row -->
          <div class="row">

            <% @featured_items.each do |item| %>

            <div class="col-sm-6 col-md-4">

            <%= render "single_item", item: item %>    

            </div>
                
            <% end %>
          
          </div>
          <!-- /Row -->
        
        </div>
        <!-- /Tab Featured -->
      
        <!-- Tab Trending -->
        <div class="tab-pane" id="tab-trending">
        
          <!-- Row -->
          <div class="row">

            <% @trending_items.each do |item| %>

            <div class="col-sm-6 col-md-4">

            <%= render "single_item", item: item %>   

            </div> 
                
            <% end %>
          
          </div>
          <!-- /Row -->
        
        </div>
        <!-- /Tab Trending -->
      </div>
      <!-- /Tab Panes -->
      
    </div>
    <!-- /Product Tabs -->
    
  </div>
  <!-- /Container -->
  
</div>
<!-- /Content Block
============================================ -->