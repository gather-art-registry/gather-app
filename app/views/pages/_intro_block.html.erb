<!-- Intro Block
============================================ -->
<div class="intro-block mgb-20">

  <!-- Container -->
  <div class="container">

    <!-- Slider Wrapper -->
    <div class="intro-slider">
    
      <!-- BxSlider -->
      <div class="bxslider" data-call="bxslider" data-options="{pager:false}">
      
        <!-- Slide -->
        <div class="slide">
          <%= image_tag "slide1.jpg", class: "img-main", alt: "" %>
          <!-- slider image + background -->
          <!-- Text -->
          <div class="text">
            <h1 class="bx-layer" data-anim="bounceInDown" data-dur="1000" data-delay="100">Create a registry</h1>
            <p class="bx-layer" data-anim="bounceInRight" data-dur="1000" data-delay="500">Select from our permanent collection or add the art you love to build your unique gift registry.</p>
            <a class="btn btn-primary bx-layer" data-anim="bounceInUp" data-dur="1000" data-delay="1000">shop now</a>
          </div>
          <!-- /Text -->
        </div>
        <!-- /Slide -->
      
      </div>
      <!-- /BxSlider -->
      
    </div>
    <!-- Slider Wrapper -->

  </div>
  <!-- /Container -->

</div>
<!-- /Intro Block
============================================ -->