<!-- Intro Block
============================================-->
<section class="intro-block intro-page boxed-section page-bg overlay-dark">

  <!-- Container -->
  <div class="container">     
    <!-- Section Title -->
    <div class="section-title invert-colors no-margin-b">
      <h2>About Gather</h2>
      <p class="hidden-xs"></p>
    </div>
    <!-- /Section Title -->
  </div>
  <!-- /Container -->

</section>
<!-- /Intro Block
============================================-->

<!-- Page Info Block
============================================-->
<section class="page-info-block boxed-section">

  <!-- Container -->
  <div class="container cont-pad-x-15"> 

    <!-- Breadcrumb -->
    <ol class="breadcrumb pull-left">
      <li><%= link_to "<i class='icon-left ti ti-home'></i>".html_safe, root_path %></li>
      <li class="active">About Gather</li>
    </ol>
    <!-- /Breadcrumb --> 

    <%= render "pages/social_links" %>

  </div>
  <!-- /Container -->

</section>
<!-- /Page Info  Block
============================================-->

<!-- Content Block
============================================-->
<section class="content-block default-bg">

  <!-- Container -->
  <div class="container no-pad-t">

    <!-- Row -->
    <div class="row">

      <!-- Main Col -->
      <div class="main-col col-sm-9 col-md-9 mgb-30-xs">
      
        <h4>About Gather</h4>
        <p></p>
        
        <!-- Accordion -->
        <div class="panel-group" id="accordion">
        	
        	<% @content.each do |content| %>
          <!-- Panel -->
          <div class="panel panel-default">
            <!-- Heading -->
            <div class="panel-heading">
              <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                <%= content.title %>
              </a>
              </h4>
            </div>
            <!-- /Heading -->
            
            <!-- Collapse -->
            <div id="collapseOne" class="panel-collapse collapse in">
              <div class="panel-body">
              <%= content.body %>
              </div>
            </div>
            <!-- /Collapse -->
            
          </div>
          <!-- /Panel -->
          <% end %>
          
        </div>
        <!-- /Accordion -->
        
      </div>
      <!-- /Main Col -->
      
      <%= render 'side_bar' %>

    </div>
    <!-- /Row -->
  
  </div>
  <!-- /Container -->
  
</section>
<!-- /Content Block
============================================-->
