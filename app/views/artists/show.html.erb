<!-- Intro Block
============================================-->
<section class="intro-block intro-page boxed-section page-bg overlay-dark">

  <!-- Container -->
  <div class="container">     
    <!-- Section Title -->
    <div class="section-title invert-colors no-margin-b">
      <h2><%= @artist.primary_identifier %></h2>
      <p class="hidden-xs"><%= @artist.artist_bio %></p>
    </div>
    <!-- /Section Title -->
  </div>
  <!-- /Container -->

</section>
<!-- /Intro Block
============================================-->

<!-- Page Info Block
============================================-->
<section class="page-info-block boxed-section">

  <!-- Container -->
  <div class="container cont-pad-x-15"> 

    <!-- Breadcrumb -->
    <ol class="breadcrumb pull-left">
      <li><%= link_to "<i class='icon-left ti ti-home'></i>".html_safe, root_path %></li>
      <li><%= link_to "All Artists", artists_path %></li>
      <li class="active"><%= @artist.primary_identifier %></li>
    </ol>
    <!-- /Breadcrumb --> 

    <%= render "pages/social_links" %>

  </div>
  <!-- /Container -->

</section>
<!-- /Page Info  Block
============================================-->

<!-- Content Block
============================================-->
<section class="content-block default-bg">

  <!-- Container -->
  <div class="container cont-pad-t-sm">

    <!-- Row -->
    <div class="row">

      <!-- Main Col -->
      <div class="main-col col-sm-9 col-md-9 mgb-30-xs">
      
        <h4>Artist Statement</h4>
        <p>
          <%= image_tag @artist.image, size: "250x250", class: "img-circle pull-right" %>
          <%= @artist.artist_statement %>
        </p>
        <p><strong>Media:</strong> <%= @artist.media.map(&:name).join(", ") %></p>
        
       <!-- Nested Row -->
        <div class="row">
        
          <!-- Column -->
          <div class="col-xs-12 col-sm-6 col-md-6">
            <p>
              <strong>Studio pickup:</strong>
              <%= @artist.studio_pickup %>
            </p>

            <p>
              <strong>Local delivery:</strong>
              <%= @artist.local_delivery %>
            </p>

            <p>
              <strong>Delivery instructions:</strong>
              <%= @artist.delivery_instructions %>
            </p>

            <p>
              <strong>Type of product:</strong>
              <%= @artist.type_of_product %>
            </p>
          </div>
          <!-- /Column -->
          
          <!-- Column -->
          <div class="col-xs-12 col-sm-6 col-md-6">
            <p>
              <strong>Website:</strong>
              <%= @artist.website %>
            </p>

            <p>
              <strong>Twitter:</strong>
              <%= @artist.twitter %>
            </p>

            <p>
              <strong>Facebook:</strong>
              <%= @artist.facebook %>
            </p>

            <p>
              <strong>Studio address:</strong>
              <%= @artist.studio_address %><br>
              <%= @artist.studio_city %>, <%= @artist.studio_state %> <%= @artist.studio_zip %>
            </p>
          </div>
          <!-- /Column -->
          
        </div>
        <!-- /Nested Row -->
        
        <div class="well">
          <p id="notice"><%= notice %></p>

          <p>
            <strong>Secondary identifier:</strong>
            <%= @artist.secondary_identifier %>
          </p>
          <p>
            <strong>Active:</strong>
            <%= @artist.active %>
          </p>
          <p>
            <strong>Notes:</strong>
            <%= @artist.notes %>
          </p>

          <%= link_to 'Edit', edit_artist_path(@artist) %> |
          <%= link_to 'Add Item', new_item_path %> |
          <%= link_to 'Back', artists_path %>
        </div>
        
      </div>
      <!-- /Main Col -->
      
      <%= render "pages/side_bar" %>

    </div>
    <!-- /Row -->
  
  </div>
  <!-- /Container -->
  
</section>
<!-- /Content Block
============================================-->


<!-- Page Info Block
============================================-->
<section class="page-info-block boxed-section">

  <!-- Container -->
  <div class="container cont-pad-t-sm">

    <!-- Row -->
    <div class="row">

      <!-- Main Col -->
      <div class="main-col">

<!-- Products Filter -->
        <div class="products-filter clearfix">
          <div class="display">
            <span class="show-list" onclick="changeView('list')"><span class="text hidden-xs">List</span><i class="icon fa fa-th-list"></i></span>
            <span class="show-grid" onclick="changeView('grid')"><span class="text hidden-xs">Grid</span><i class="icon fa fa-th"></i></span>
          </div>

          <div class="filter"><b class="hidden-xs">No</b>
            <select>
            <option value="9" selected="selected">9</option>
            <option value="12">12</option>
            <option value="15">15</option>
            <option value="18">18</option>
            </select>
          </div>
          
          <div class="filter"><b class="hidden-xs">Sort By</b>
            <select>
            <option value="9" selected="selected">Date</option>
            <option value="12">Price</option>
            <option value="15">Popularity</option>
            </select>
          </div>
        
        </div>
        <!-- /Products Filter -->
      
        <!-- Row -->
        <div class="product-grid row grid-20 mgb-20">
        
          <% @items.each do |item| %>

          <!-- Col -->
          <div class="col-sm-6 col-md-3">
          
            <%= render 'pages/single_item', item: item %>
          
          </div>
          <!-- /Col -->
          
        <% end %>

        </div>
        <!-- /Row -->
        
        <!-- Pagination -->
        <ul class="pagination">
          <li><a href="#">&laquo;</a></li>
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li><a href="#">&raquo;</a></li>
        </ul>
        <!-- /Pagination -->
        
      </div>
      <!-- /Main Col -->

    </div>
    <!-- /Row -->
  
  </div>
  <!-- /Container -->
  
</section>
<!-- /Content Block
============================================-->


