<!-- Side Col -->
<div class="side-col side-col-padded col-sm-3 col-md-3">

  <!-- Side Widget -->
  <div class="side-widget">
  
    <h5 class="boxed-title">categories</h5>
    
    <ul class="ul-toggle">
      <% Gallery.all.each do |gallery| %>
        <li><%= link_to gallery.name, gallery_path(gallery.id) %></li>
      <% end %>
    </ul>
    
  </div>
  <!-- /Side Widget -->
  
  <!-- Side Widget -->
  <div class="side-widget no-margin-l">
  
    <h5 class="boxed-title">price filter</h5>
    
    <!-- Price Range Form -->
    <form class="side-form-panel">
      <label>Min Price</label>
      <div class="form-group slider-group">
        <div class="slider-ctrl" data-call="jui-slider" data-target="#min1" data-options="{min:0, max:1000, value:500}"></div>
        <input id="min1" class="form-control" value="500" type="text">
      </div>              
      <label>Max Price</label>
      <div class="form-group slider-group">
        <div class="slider-ctrl" data-call="jui-slider" data-target="#max1" data-options="{min:0, max:1000, value:500}"></div>
        <input id="max1" class="form-control" value="500" type="text">
      </div>  
      <button class="btn btn-outline btn-block">submit</button>
    </form>
    <!-- /Price Range Form -->
  
  </div>
  <!-- /Side Widget -->
  
</div>
<!-- /Side Col -->

