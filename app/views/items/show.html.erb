<!-- Page Info
============================================-->
<section class="page-info-block page-info-alt  boxed-section">

  <!-- Container -->
  <div class="container cont-pad-x-15"> 

    <!-- Breadcrumb -->
    <ol class="breadcrumb pull-left">
      <li><%= link_to "<i class='icon-left ti ti-home'></i>".html_safe, root_path %></li>
      <li class="active"><%= @item.name %></li>
    </ol>
    <!-- /Breadcrumb --> 

    <%= render "pages/social_links" %>

  </div>
  <!-- /Container -->

</section>
<!-- /Page Info Block
============================================-->

<!-- Content Block
============================================-->
<section class="content-block has-sidebar default-bg">
  <!-- Container -->
  <div class="container no-pad-t">

    <!-- Product Row -->
    <div class="row product-details">
    
      <!-- Col -->
      <div class="col-md-5 mgb-30-xs">
      
        <!-- Slider Wrapper -->
        <div class="main-slider">
          <!-- BxSlider -->
          <ul class="bxslider" data-call="bxslider" data-options="{pagerCustom:'#thumb-pager', controls:false}">
            <li>
              <%= image_tag @item.image_1 %>
            </li>
            <li>
              <%= image_tag @item.image_2 %>
            </li>
            <li>
              <%= image_tag @item.image_3 %>
            </li>
            <li>
              <%= image_tag @item.image_4 %>
            </li>
          </ul>
          <!-- /BxSlider -->
        </div>
        <!-- /Slider Wrapper -->
        
        <!-- Slider Wrapper -->
        <div  class="thumb-slider bx-controls-box">
          <!-- BxSlider -->
          <ul id="thumb-pager" class="bxslider" data-call="bxslider" data-options="{pager:false, slides:4, slideMargin:10}">
            <li>
              <a data-slide-index="0" href="#"><%= image_tag @item.image_1, class: "fillw", alt: "" %></a>
            </li>
            <li>
              <a data-slide-index="1" href="#"><%= image_tag @item.image_2, class: "fillw", alt: "" %></a>
            </li>
            <li>
              <a data-slide-index="2" href="#"><%= image_tag @item.image_3, class: "fillw", alt: "" %></a>
            </li>
            <li>
              <a data-slide-index="3" href="#"><%= image_tag @item.image_4, class: "fillw", alt: "" %></a>
            </li>
          </ul>
          <!-- /BxSlider -->
        </div>
        <!-- /Slider Wrapper -->
        
      </div>
      <!-- /Col -->
      
      <!-- Col -->
      <div class="col-md-7">
        
        <h3 class="product-title"><%= @item.name %></h3>
        
        <div class="price-box">
          <h4 class="product-price"><%= number_to_currency(@item.price) %></h4>
        </div>
        
        <!-- Accordion -->
        <div class="panel-group" id="accordion">
        
          <!-- Panel -->
          <div class="panel panel-default">
            <!-- Heading -->
            <div class="panel-heading">
              <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                Product Details
              </a>
              </h4>
            </div>
            <!-- /Heading -->
            
            <!-- Collapse -->
            <div id="collapseOne" class="panel-collapse collapse in">
              <div class="panel-body">
              <p><strong>Medium:</strong> <%= @item.media.map(&:name).join(", ") %></p>
              <p><%= @item.description %></p>
              </div>
            </div>
            <!-- /Collapse -->
            
          </div>
          <!-- /Panel -->
          
          <!-- Panel -->
          <div class="panel panel-default">
            <!-- Heading -->
            <div class="panel-heading">
              <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                Artist Info
              </a>
              </h4>
            </div>
            <!-- /Heading -->
            
            <!-- Collapse -->
            <div id="collapseTwo" class="panel-collapse collapse">
              <div class="panel-body">
                <p>
                  <strong>Artist:</strong>
                  <%= link_to @item.artist.primary_identifier, artist_path(@artist.id) %>
                  <p><%= @item.artist.artist_statement %>
                </p>
              </div>
            </div>
            <!-- /Collapse -->
            
          </div>
          <!-- /Panel -->
          
          <!-- Panel -->
          <div class="panel panel-default">
            <!-- Heading -->
            <div class="panel-heading">
              <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">
                Shipping / Admin Info
              </a>
              </h4>
            </div>
            <!-- /Heading -->
            
            <!-- Collapse -->
            <div id="collapseThree" class="panel-collapse collapse">
              <div class="panel-body">
                <p>
                  <strong>Item availability:</strong>
                  <%= @item.item_availability.try(:name) %>
                </p>

                <p>
                  <strong>Quantity:</strong>
                  <%= @item.quantity %>
                </p>
                <p>
                  <strong>Special order:</strong>
                  <%= @item.special_order %>
                </p>

                <p>
                  <strong>Turn around time:</strong>
                  <%= @item.turn_around_time %>
                </p>

                <p>
                  <strong>Production category:</strong>
                  <%= @item.production_category.try(:name) %>
                </p>

                <p>
                  <strong>Delivery timing:</strong>
                  <%= @item.delivery_timing.try(:name) %>
                </p>

                <p>
                  <strong>Shipping instruction:</strong>
                  <%= @item.shipping_instruction.try(:name) %>
                </p>

                <p>
                  <strong>Notes:</strong>
                  <%= @item.notes %>
                </p>

                <%= link_to 'Edit', edit_item_path(id: @item.id) %> |
                <%= link_to 'Back', items_path %>
              </div>
            </div>
            <!-- /Collapse -->
            
          </div>
          <!-- /Panel -->

        </div>
        <!-- /Accordion -->

        <h4>Buy now</h4>
        <!-- Row -->
        <div class="row grid-20">
          
          <!-- Col -->
          <div class="col-md-6">
            <div class="form-group">
              <!-- Input Group -->
              <div class="input-group">
                <div class="input-group-addon"><i class="icon fa fa-calculator"></i></div>
                <select class="form-control">
                  <option>Select Quantity</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </div>
              <!-- /Input Group -->
            </div>
            <!-- /Form Group -->
            
          </div>
          <!-- /Col -->
          
        </div>
        <!-- /Row -->
        
        <a href="cart.html" class="btn btn-default btn-bigger"><i class="icon-left ti ti-shopping-cart"></i>add to cart</a>
      </div>
      <!-- /Col -->
      
    </div>
    <!-- /Product Row -->


<p id="notice"><%= notice %></p>





