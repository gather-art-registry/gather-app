<!-- Empty Block (use .abs-filler to fill page)
================================================== -->
<div class="empty-block abs-filler">
  <!-- Vcenter -->
  <div class="vcenter">
    <div class="vcenter-this">
      <!-- Container -->
      <div class="container">
        <!-- Form Panel -->
        <div class="form-panel width-33pc width-100pc-xs hcenter">
          <header>Sign In</header>
          <fieldset>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
            
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user"></i></div>
              <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Enter your User Name" %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-lock"></i></div>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter your Password" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <%= label_tag :remember_me, "Remember Me", class: "checkbox-inline" %>
                <%= f.check_box :remember_me, class: "form-control checkbox-inline" %>
              </div>
            <% end -%>

            <div class="form-group">
              <%= f.submit "Sign in", class: "btn btn-default btn-block" %><br />
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </fieldset>
          </div>
        <!-- /Form Panel -->
        <div class="align-center">Need an Account? <a href="#">Sign Up</a></div>
      </div>
      <!-- /Container -->
    </div>
    <!-- /Vcenter this -->
  </div>
  <!-- /Vcenter -->
</div>
<!-- /Empty Block
================================================== -->
    
