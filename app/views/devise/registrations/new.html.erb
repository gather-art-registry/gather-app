<div class="row">
  <div class="col-lg-8 col-md-8 col-lg-offset-1 col-md-offset-1">
    <h3 class="cs-heading">Sign up</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"} ) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :username, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Enter your Username" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your Email" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter your Password" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Enter your Password Again" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :submit, class: "col-sm-3 control-label" %>
        <div class="col-sm-9">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


