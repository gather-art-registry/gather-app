<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit <%= resource_name.to_s.humanize %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :username, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
        <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, class: "col-sm-4 control-label" %> <i>(leave blank if you don't want to change it)</i>
        <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter your new password" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Enter your new password again" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: "col-sm-4 control-label" %> <i>(Enter current password to confirm changes)</i>
        <div class="col-sm-8">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Enter your current password" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :submit, class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
        <%= f.submit "Update", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>

    <h3>Cancel my account</h3>
    <div class="form-group form-horizontal">
      <%= label_tag :unhappy, "Unhappy?", class: "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %>
        <br />
        <%= link_to "Back", :back %>
      </div>
    </div>
    <br />
  </div>
</div>